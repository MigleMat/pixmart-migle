<div class="category-card{% if category.title == 'App Icons' %} category-card--highlighted{% endif %}">
    <svg class="category-card__icon{% if category.title == 'App Icons' %} category-card__icon--highlighted{% endif %}" aria-hidden="true">
        <use xlink:href="/img/sprite.svg#{{ category.icon }}"></use>
    </svg>
    <div class="category-card__content">
        <h3 class="category-card__title{% if category.title == 'App Icons' %} category-card__title--highlighted{% endif %}">
            {{ category.title }}
        </h3>
        <p class="category-card__description{% if category.title == 'App Icons' %} category-card__description--highlighted{% endif %}">
            {{ category.desc }}
        </p>
    </div>
</div>
