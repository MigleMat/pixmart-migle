<div class="author-card">
    <picture class="author-card__picture">
        <source 
         srcset="
          /img/emma-1x.avif 1x, 
          /img/emma-2x.avif 2x" 
         type="image/avif"
        >
        <source 
         srcset="
          /img/emma-1x.webp 1x, 
          /img/emma-2x.webp 2x" 
         type="image/webp"
        >
        <img    
         class="author-card__avatar"
         src="/img/emma-1x.jpg" 
         srcset="
          /img/emma-1x.jpg 1x, 
          /img/emma-2x.jpg 2x" 
         width="60"
         height="60" 
         alt="Portrait of {{ author.name }}, author of the article"
        >
    </picture>

    <div class="author-card__info">
        <h5 class="author-card__name">{{ author.name }}</h5>
        <time class="author-card__date" datetime="{{ author.date }}">{{ author.formattedDate }}</time>
    </div>
</div>
