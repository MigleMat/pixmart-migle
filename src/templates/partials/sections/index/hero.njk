<section class="hero">
    <div class="hero__container layout-container">
        <img 
            src="/img/hero-bg-2x.webp"
            srcset="/img/hero-bg-1x.webp 1x, /img/hero-bg-2x.webp 2x"
            alt=""
            class="hero__ornament"
            aria-hidden="true"
            decoding="async"
            loading="lazy"/>

        <div class="hero__content">
            <h1 class="hero__title">{{ hero.title | safe }}</h1>
            <h5 class="hero__description">{{ hero.text }}</h5>

            <div class="hero__actions">
                {% for btn in heroButtons %}

                    {% if btn.text == "Shop Now" %}
                        {% set linkButtonClass = "hero__button-link button-link button-link--secondary" %}
                        {% set linkTextClass = 'button-link__text' %}
                    {%else %}
                        {% set linkButtonClass = "hero__button-link button-link button-link--tertiary" %}
                        {% set linkIconClass = "button-link__icon" %}
                        {% set linkTextClass = 'button-link__text' %}
                    {% endif %}
                    {% include "partials/components/atoms/button-link.njk" %}

                {% endfor %}
            </div>
        </div>

    </div>
</section>
